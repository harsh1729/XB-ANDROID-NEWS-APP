<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="4dp" 
    android:background="@color/app_transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llytContainerNewsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@drawable/selector_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/app_transparent" >

            <TextView
                android:id="@+id/txt_news_item_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
				android:ellipsize="end"
				android:background="@color/app_transparent"
                android:textColor="@drawable/selector_text_color_black_to_white"
                android:textSize="@dimen/font_lbl_normal"
                android:layout_marginBottom="4dp" />


            <TextView
                android:id="@+id/txt_news_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_transparent"
                android:maxLines="1"
				android:ellipsize="end"
                android:layout_gravity="bottom"
                android:textColor="@drawable/selector_text_color_gray_to_white"
                android:textSize="@dimen/font_lbl_small" />
        </LinearLayout>

		 <ImageView
                android:id="@+id/img_news_item"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content" 
            	android:layout_gravity="center_vertical|right"
            	android:scaleType="centerCrop"
            	android:padding="0dp"
            	android:background="@color/app_transparent"/>
    </LinearLayout>

</LinearLayout>