<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytLoadingContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_loading_screen_bg"
    android:onClick="onClickSpinnerView"
    android:orientation="vertical"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center" >
       
        <ImageView
            android:id="@+id/imgViewLogoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/app_red"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/news_logo_name" />
        
        <ProgressBar
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewLogoName"
            android:layout_centerHorizontal="true"
            android:background="@color/app_transparent"
            android:indeterminateDrawable="@drawable/progress_bar_radar"
            android:minHeight="48dp" />
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llytSpinnerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:paddingBottom="20dp"
        	android:orientation="horizontal"
        	>
        
<!--         <TextView -->
<!--             android:id="@+id/txtXB" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_marginRight="10dp" -->
<!--             android:background="@color/app_transparent" -->
<!--             android:text="developed by " -->
<!--             android:textColor="@color/app_black" -->
<!--             android:textSize="@dimen/font_lbl_small_medium"  -->
<!--             /> -->
        
        <ImageView
            android:id="@+id/imgViewLogoXB"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/imgViewLogoNameXB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        </LinearLayout>
    </LinearLayout>

</LinearLayout>