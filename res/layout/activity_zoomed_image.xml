<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gesture-image="http://schemas.polites.com/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:background="@color/app_black"
    tools:context=".Activity_ZoomedImage" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/app_transparent"
         >

        <com.polites.android.GestureImageView
            android:id="@+id/image_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            gesture-image:double-tap="true"
            gesture-image:max-scale="10.0"
            gesture-image:min-scale="0.1"
            gesture-image:strict="true" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_transparent"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/imgBtnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/cancel"
        android:onClick="onCickCancel"
        android:scaleType="fitCenter"
        android:background="@color/app_transparent" 
        />
    
    <ImageButton
        android:id="@+id/imgBtnShare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/share_selected"
        android:onClick="onCickShare"
        android:scaleType="fitCenter"
        android:background="@color/app_transparent" 
        />

</RelativeLayout>