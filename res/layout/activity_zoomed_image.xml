    </RelativeLayout>

<!-- <android.support.v4.view.ViewPager -->
<!--         android:id="@+id/viewpager" -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="match_parent"/> -->

    <ProgressBar
        android:id="@+id/loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_transparent"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/imgBtnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/cancel_white"
        android:onClick="onCickCancel"
        android:scaleType="fitCenter"
        android:background="@color/app_transparent" 
        />
    
    <ImageButton
        android:id="@+id/imgBtnShare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/whatsapp"
        android:onClick="onCickShare"
        android:scaleType="fitCenter"
        android:background="@color/app_transparent" 
        />
    
     <ImageButton
        android:id="@+id/imgBtnPrev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/selector_image_prev"
        android:onClick="onClickPrev"
        android:scaleType="fitCenter"
        android:background="@color/app_transparent" 
        />
      <ImageButton
        android:id="@+id/imgBtnNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/selector_image_next"
        android:onClick="onClickNext"
        android:scaleType="fitCenter"
        android:background="@color/app_transparent" 
        />
      
      <TextView
                android:id="@+id/txtNewsImageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:padding="6dp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
				android:ellipsize="end"
                android:background="@color/app_transparent"
                android:textSize="@dimen/font_lbl_normal"
                android:textColor="@color/app_white" />
      
      <TextView
                android:id="@+id/txtNewsHeadingZoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtNewsImageIndicator"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="12dp"
                android:padding="6dp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="3"
				android:ellipsize="end"
                android:background="@color/app_tranparent_black"
                android:textSize="@dimen/font_lbl_large"
                android:textColor="@color/app_white" />

</RelativeLayout>