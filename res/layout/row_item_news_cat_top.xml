<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/app_transparent"
    android:paddingBottom="4dp" 
    android:orientation="vertical" >

    <RelativeLayout android:id="@+id/rlytContainerNewsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@drawable/selector_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

         <ImageView
                android:id="@+id/img_news_item"
                android:layout_width="match_parent"
            	android:layout_height="match_parent" 
            	android:scaleType="centerCrop"
            	android:padding="0dp"
            	android:background="@color/app_transparent"/>
         
            <TextView
                android:id="@+id/txt_news_item_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:maxLines="3"
				android:ellipsize="end"
				android:background="@color/app_tranparent_black"
                android:textColor="@color/app_white"
                android:textSize="@dimen/font_lbl_normal"
                android:padding="8dp" />    
      </RelativeLayout>

</LinearLayout>