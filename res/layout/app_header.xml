<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
            android:id="@+id/llytHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:padding="4dp"
            android:background="@color/app_white"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imgHeaderBtnLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@color/app_transparent"
                android:onClick="onClickToggle" />

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:maxLines="1"
				android:ellipsize="end"
                android:textColor="@color/app_black"
                android:textStyle="italic|bold" 
                android:gravity="center_vertical"
                android:background="@color/app_transparent"
                android:paddingLeft="4dp"
                android:text="@string/news_paper_name"
                android:textSize="@dimen/font_lbl_news_paper_name" />

