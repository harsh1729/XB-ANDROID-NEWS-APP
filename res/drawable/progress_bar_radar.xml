<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >
    <shape
        android:shape="oval"
        android:useLevel="false" >
        <size
            android:height="48dip"
            android:width="48dip" />
        <gradient
            android:centerColor="@color/app_verylightblue"
            android:centerY="0.50"
            android:endColor="@color/app_darkblue"
            android:startColor="@color/app_verylightblue"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>
