<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xercesblue.newspaperapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

     <permission
        android:name="com.xercesblue.newspaperapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" >
    </permission>
    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.xercesblue.newspaperapp.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    

    <application
        android:name="com.xercesblue.newspaperapp.Custom_VolleyAppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_Splash"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
           
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_Home"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_NewCatWise"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Single_news_show"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_NewsDetail"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.ChildAnimationExample"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_ZoomedImage"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_SavedNews"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_Settings"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xercesblue.newspaperapp.Activity_SelectDateRange"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>
        
        <service android:name="com.xercesblue.newspaperapp.GCMIntentService" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.xercesblue.newspaperapp" />
            </intent-filter>
        </receiver>
        
    </application>
    
    

</manifest>
