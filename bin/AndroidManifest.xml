<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.seemasandesh.newspaperapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <permission
        android:name="in.seemasandesh.newspaperapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" >
    </permission>
    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="in.seemasandesh.newspaperapp.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	
	<uses-permission android:name="in.seemasandesh.newspaperapp.C2D_MESSAGE"/>
        <uses-permission android:name="android.permission.VIBRATE"/>
        <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
        <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	
    <application
        android:name="in.seemasandesh.newspaperapp.Custom_VolleyAppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_Splash"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_Home"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_NewCatWise"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Single_news_show"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_NewsDetail"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.ChildAnimationExample"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_ZoomedImage"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_SavedNews"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_Settings"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_SelectDateRange"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="in.seemasandesh.newspaperapp.GCMIntentService" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="in.seemasandesh.newspaperapp" />
            </intent-filter>
        </receiver>

        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_DateWiseNewsList" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_ContactUs" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_TermsOfUSe" >
        </activity>
        <activity
            android:name="in.seemasandesh.newspaperapp.Activity_AboutUs" >
        </activity>
    </application>

</manifest>
