<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlytRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <!-- Header aligned to top -->

    <include layout="@layout/app_header" />

    <LinearLayout
        android:id="@+id/llytChooseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/llytHeader"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_white_rounded"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/txtChooseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_transparent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/txt_choose_date"
            android:textColor="@color/app_red"
            android:textSize="@dimen/font_lbl_small_medium" />

        <LinearLayout
            android:id="@+id/llytBottomLineChooseDate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/app_red"
            android:orientation="vertical" >
        </LinearLayout>

       <LinearLayout 
           android:id="@+id/llytStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
           <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Start Date : "
            android:textSize="@dimen/font_lbl_normal"/>
           
<!--            <LinearLayout  -->
<!--            android:id="@+id/llytStartDateChild" -->
<!--             	android:layout_height="wrap_content" -->
<!--             	android:layout_width="0dp" -->
<!--             	android:layout_weight="4" -->
<!--             	android:gravity="center_vertical" -->
<!--             android:orientation="horizontal"> -->
           <TextView 
           		android:id="@+id/txtStartDate"
            	android:layout_width="0dp"
            	android:layout_weight="3"
            	android:layout_height="wrap_content"
            	android:text="Select"
            	android:textSize="@dimen/font_lbl_normal"/>
           
          
          <ImageButton 
               	android:id="@+id/btnStartDate"
               	android:layout_width="0dp"
            	android:layout_weight="2"
            	android:layout_height="wrap_content"
            	android:src="@drawable/calender_black"
            	android:padding="0dp"
            	android:background="@color/app_transparent"
            	android:scaleType="fitCenter"
            />
<!--           </LinearLayout> -->
           
       </LinearLayout>
       
       
       <LinearLayout 
           android:id="@+id/llytEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
           <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="End Date : "
            android:textSize="@dimen/font_lbl_normal"/>
           
<!--            <LinearLayout  -->
<!--            android:id="@+id/llytEndDateChild" -->
<!--             	android:layout_height="wrap_content" -->
<!--             	android:layout_width="0dp" -->
<!--             	android:layout_weight="1" -->
<!--             	android:gravity="center_vertical" -->
<!--             android:orientation="horizontal"> -->
           <TextView 
           		android:id="@+id/txtEndDate"
            	android:layout_width="0dp"
            	android:layout_weight="3"
            	android:layout_height="wrap_content"
            	android:text="Select"
            	android:textSize="@dimen/font_lbl_normal"/>
           
          
          <ImageButton 
               	android:id="@+id/btnEndDate"
               	android:layout_width="0dp"
            	android:layout_weight="2"
            	android:layout_height="wrap_content"
            	android:src="@drawable/calender_black"
            	android:padding="0dp"
            	android:background="@color/app_transparent"
            	android:scaleType="fitCenter"
            />
<!--           </LinearLayout> -->
           
       </LinearLayout>
       
       <TextView
            android:id="@+id/txtChooseCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_transparent"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/txt_choose_cat"
            android:textColor="@color/app_red"
            android:textSize="@dimen/font_lbl_small_medium" />

        <LinearLayout
            android:id="@+id/llytBottomLineChooseCat"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/app_red"
            android:orientation="vertical" >
        </LinearLayout>
        
        <LinearLayout 
           android:id="@+id/llytChooseCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            
           <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Category : "
            android:textSize="@dimen/font_lbl_normal"/>
           
           <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" 
                    />
           
       </LinearLayout>
        
       <Button 
           	android:id="@+id/btnGetNews"
            android:layout_width="match_parent"
           	android:layout_height="wrap_content"
           	android:layout_gravity="center_horizontal"
           	android:background="@drawable/selector_bg_offwhite"
           	android:textColor="@drawable/selector_text_color_black_to_white"
           	android:layout_marginTop="20dp"
           	android:paddingBottom="12dp"
        	android:paddingLeft="12dp"
        	android:paddingRight="12dp"
       		android:paddingTop="12dp"
           	android:text="Get News"
           	android:textSize="@dimen/font_lbl_normal"
           	android:onClick="btnGetNewsClick"
           	/>
       
    </LinearLayout>

</RelativeLayout>