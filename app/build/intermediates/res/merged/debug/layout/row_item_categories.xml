<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/selector_bg_white_gradient"
    android:orientation="horizontal"
    >
  
	<ImageView
	    android:id="@+id/img_GroupCatgeory"
	    android:layout_width="0dp"
	    android:layout_weight="1.5"	    
	    android:layout_height="match_parent"
	    android:scaleType="fitCenter"  />
	<TextView
	    android:id="@+id/txt_GroupText"
	    android:layout_width="0dp"
	    android:layout_weight="7"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical|left"
	    android:layout_marginLeft="5dp"
	    android:textSize="@dimen/font_lbl_small_medium"
	    android:textColor="@drawable/selector_text_color_black_to_white" />

	<ImageView
	    android:id="@+id/img_GroupIndicator"
	    android:layout_width="0dp"
	    android:layout_weight="1.5"
	    android:layout_marginLeft="5dp"
	    android:scaleType="fitCenter" 
	    android:layout_height="match_parent"
	    android:src="@drawable/next_black" />
	
</LinearLayout>
