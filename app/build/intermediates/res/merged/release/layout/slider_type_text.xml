<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slider_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:background="@color/app_white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollViewNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:id="@+id/llytScrollContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rlytScrollContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imgNewsDetailBig"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"                      
                        android:layout_alignParentTop="true"
                        android:background="@color/app_tranparent_black"
                        android:contentDescription="@string/image"
                        android:scaleType="centerCrop"
                        android:padding="0dp" />

                     <TextView
                        android:id="@+id/txtNewsImageTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"  
                        android:layout_below="@+id/imgNewsDetailBig"       
                        android:maxLines="3"
						android:ellipsize="end"             
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/app_gray"
                        android:textSize="@dimen/font_lbl_small" />
                    <TextView
                        android:id="@+id/txtNewsHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNewsImageTag"
                        android:padding="5dp"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/font_lbl_large"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNewsDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNewsHeading"
                        android:padding="5dp"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/font_lbl_normal" />

                   
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>



